  "imports": {
    "effection": "https://deno.land/x/effection@3.0.0-beta.0/mod.ts",
    "hastx/": "https://deno.land/x/hastx@0.0.7/",
    "hastx/jsx-runtime": "https://deno.land/x/hastx@v0.0.7/jsx-runtime.ts"
  }
}
